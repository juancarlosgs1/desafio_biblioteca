
<% if notice.present? %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>



<%= form_tag(books_path, method: "post") do %>
     <div class="form-group">
        <%= label_tag(:title, "Titulo") %>
        <%= text_field_tag(:title , nil , required: true) %>
    </div>
    <div class="form-group">
        <%= label_tag(:author, "Autor") %>
        <%= text_field_tag(:author, nil , required: true) %>
    </div>
    <div class="form-group">
        <%= label_tag(:genre, "Genero") %>
        <%= text_field_tag(:genre, nil , required: true) %>
    </div>

    <%= submit_tag("Enviar") %>
<% end %>


<%= search_form_for @q do |f| %>
  <%= f.label :state_book %>
  

  <%= f.select(:state_book_eq, options_for_select({ "En Estante" => "0", "Prestado" => "1" }),{ include_blank: true }) %>

  <%= f.submit %>
<% end %>



<table class="table table-dark">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>Genre</th>
      <th>State</th>
      <th>Accion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.state_book %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
